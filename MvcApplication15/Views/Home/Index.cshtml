@using VideoGames.Data
@model IEnumerable<VideoGames.Data.VideoGame>

<div class="row" style="margin-bottom: 20px;">
    <div class="col-md-4 col-md-offset-4">
        <button class="btn btn-success btn-block btn-lg" id="addGame">
            Add Video Game
        </button>
    </div>
</div>

<div class="row">
    <div class="table-reponsive">
        <table class="table table-hover table-condensed table-striped table-bordered">
            <tr>
                <th>Developer</th>
                <th>Title</th>
                <th>Year</th>
                <th>Actions</th>
            </tr>

            @foreach (VideoGame game in Model)
            {
                <tr>
                    <td>
                        <span class="edit developer">
                            @game.Developer
                        </span>
                        <input type="text" class="edit form-control developer" style="display: none;" value="@game.Developer" />
                    </td>
                    <td>
                        <span class="edit title">
                            @game.Title
                        </span>
                        <input type="text" class="edit form-control title" style="display: none;" value="@game.Title" />
                    </td>
                    <td>
                        <span class="edit year">
                            @game.Year
                        </span>
                        <input type="text" class="edit form-control year" style="display: none;" value="@game.Year" />
                    </td>
                    <td>
                        <button class="btn btn-warning editButton" data-gameid="@game.Id" data-edit-mode="false">Edit</button>
                        <button class="btn btn-danger deleteButton" data-gameid="@game.Id">Delete</button>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

<div class="modal fade addGameModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Game</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input type="text" id="developer" class="form-control" placeholder="Developer" />
                    <br /><br />
                    <input type="text" id="title" class="form-control" placeholder="Title" />
                    <br /><br />
                    <input type="text" id="year" class="form-control" placeholder="Year" />
                    <br /><br />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="submit">Submit</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section scripts
{
    <script src="/Scripts/index.js"></script>
}